@model AccessManagerFormModel

<section class="row justify-content-center">
	<div class="card border-2 p-0 col-8 col-xl-4">
		<h4 class="card-header p-2 text-center">Requesting access as a @Model.Position</h4>
		<div class="card-body bg-light p-4 p-0">
			<form asp-action="RequestManagerAccess" method=post>
				<div class="form-group row mb-3">
					<label asp-for="@Model.AccessCode" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.AccessCode" class="form-control">
						<span asp-validation-for="@Model.AccessCode" class="text-danger"></span>
					</div>
				</div>
				<input hidden asp-for="@Model.Position" />
				<input hidden asp-for="@Model.UserId" />
				<div class="row justify-content-center">
					<button class="btn btn-success col-auto m-2" type="submit"><i class="fa-solid fa-paper-plane me-2"></i>Submit</button>
				</div>
			</form>
		</div>
	</div>
</section>
