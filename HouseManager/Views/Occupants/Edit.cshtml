@model OccupantFormModel

@{
	var accessCode = TempData["AccessCode"];
}

<section class="row justify-content-center">
	<div class="card border-2 p-0 col-8 col-xl-4">
		<h4 class="card-header p-2 text-center">Add Occupant</h4>
		<div class="card-body p-4 p-0">
			<form asp-action="Edit" asp-route-id="@Model.Id" method=post>
				<div class="form-group row mb-3">
					<label asp-for="@Model.FullName" class="col-lg-3 control-label text-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.FullName" class="form-control">
					</div>
					<span asp-validation-for="@Model.FullName" class="text-danger"></span>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label text-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.PhoneNumber" class="form-control p-2">
					</div>
					<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.IsOwner" class="col-lg-3 control-label text-end pt-2"></label>
					<div class="col-lg-9">
						<select asp-for="@Model.IsOwner" class="form-select">
							<option value="false">No</option>
							<option value="true">Yes</option>
						</select>
					</div>
					<span asp-validation-for="@Model.IsOwner" class="text-danger"></span>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.BirthDate" class="col-lg-3 control-label text-end pt-2">Birth Date</label>
					<div class="col-lg-9">
						<div class="input date form-floating row" id="birth-date" data-provide="datepicker" data-date-format="dd-MM-yyyy"
							 data-date-autoclose="true" data-date-today-Btn="true" data-date-container="#birth-date" data-date-orientation="auto">
							<div class="input-group-addon">
								<input asp-for="@Model.BirthDate" type="text" class="form-control" value="@Model.BirthDate">
								<span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.OccupationDate" class="col-lg-3 control-label text-end pt-2">Occupation Date</label>
					<div class="col-lg-9">
						<div class="input date form-floating row" id="occupation-date" data-provide="datepicker" data-date-format="dd-MM-yyyy"
							 data-date-autoclose="true" data-date-today-Btn="true" data-date-container="#occupation-date" data-date-orientation="auto">
							<div class="input-group-addon">
								<input asp-for="@Model.OccupationDate" type="text" class="form-control" value="@Model.OccupationDate">
								<span asp-validation-for="@Model.OccupationDate" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
				<div class="row justify-content-center">
					<button class="btn btn-success col-auto m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
					<button class="btn btn-warning col-auto m-2" type="button" onclick="location.href='@Url.Action("Details","Units", new { id = Model.UnitId})';"><i class="fa-solid fa-cancel me-2"></i>Cancel</button>
				</div>
			</form>
			<form class="row justify-content-center">
				<button class="btn btn-danger col-auto m-2" asp-controller="Occupants" asp-action="Leave" asp-route-id="@Model.Id"><i class="fa-solid fa-person-walking-luggage me-2"></i>Leave</button>
				<button asp-controller="Access" asp-action="GenerateOccupantCode" asp-route-id="@Model.Id" class="btn btn-secondary col-auto m-2">Generate Access Code</button>
			</form>
			@if (accessCode != null)
			{
				<script>
					document.addEventListener('DOMContentLoaded', (event) => {
						var myModal = new bootstrap.Modal(document.getElementById("exampleModal"));
						myModal.show();
					});
				</script>
			}
			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content">
						<div class="modal-header">
							<h1 class="modal-title fs-5" id="exampleModalLabel">Occupant Access Code</h1>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<p class="text-center">Access code for occupant @Model.FullName</p>
							<h4 class="text-center">@accessCode</h4>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}