@model UnitDetailViewModel

@{
	ViewBag.Name = $"Unit {Model.Number}";
}

<div class="bg-light rounded h-100 p-4">
	<h4 class="mb-4">@ViewBag.Name</h4>
	<div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Floor: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.Floor">
		</div>
	</div>
	<div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Type: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.Type">
		</div>
	</div>
	<div class="form-group row align-items-top">
		<label class="col-sm-2 col-form-label fw-bold text-end">Total Area: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.TotalArea m2">
		</div>
	</div>
	<div class="form-group row align-items-top">
		<label class="col-sm-2 col-form-label fw-bold text-end">Common Parts: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.CommonParts %">
		</div>
	</div>
	<div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Pets: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.PetsCount">
		</div>
	</div>
	<div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Balance: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.Balance">
		</div>
	</div>
	@* <div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Occupants: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.OccupantsCount">
		</div>
	</div> *@
</div>