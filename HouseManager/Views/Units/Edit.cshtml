@inject IHttpContextAccessor HttpContextAccessor

@model UnitFormModel

@{
	var unitTypes = Html.GetEnumSelectList(typeof(UnitType));
	var houseOrgId = HttpContextAccessor?.HttpContext?.Session.GetInt32(HouseOrgId) ?? 0;
}

<section class="row justify-content-center">
	<div class="card border-2 p-0 col-8 col-xl-4">
		<h4 class="card-header p-2 text-center">Edit Unit @Model.Number</h4>
		<div class="card-body p-4 p-0">
			<form asp-action="Edit" asp-route-id="@Model.Id" method=post>
				<div>
					<div class="form-group row mb-3">
						<label asp-for="@Model.Number" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
						<div class="col-lg-9">
							<input asp-for="@Model.Number" class="form-control" placeholder="@Model.Number">
							<span asp-validation-for="@Model.Number" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row mb-3">
						<label asp-for="@Model.Floor" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
						<div class="col-lg-9">
							<input asp-for="@Model.Floor" class="form-control" placeholder="@Model.Floor">
							<span asp-validation-for="@Model.Floor" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row mb-3">
						<label asp-for="@Model.Type" class="col-lg-3 control-label text-start text-lg-end pt-2">Select Unit Type</label>
						<div class="col-lg-9">
							<select asp-for="@Model.Type" class="form-select" id="floatingSelect" asp-items="@unitTypes">
								<option selected value="@Model.Type"></option>
							</select>
						</div>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.TotalArea" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.TotalArea" class="form-control" placeholder="@Model.TotalArea">
						<span asp-validation-for="@Model.TotalArea" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.CommonParts" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.CommonParts" class="form-control" placeholder="@Model.CommonParts">
						<span asp-validation-for="@Model.CommonParts" class="text-danger"></span>
					</div>
				</div>
				<div class="row justify-content-center">
					<button class="btn btn-success col-auto m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
					<button class="btn btn-warning col-auto m-2" type="button" onclick="location.href='@Url.Action("All","Units", new { houseOrgId })';"><i class="fa-solid fa-cancel me-2"></i>Cancel</button>
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}