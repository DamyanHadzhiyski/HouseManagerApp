@inject IHttpContextAccessor HttpContextAccessor

@model UnitFormModel

@{
	var unitTypes = Html.GetEnumSelectList(typeof(UnitType));
	var houseOrgId = HttpContextAccessor?.HttpContext?.Session.GetInt32(HouseOrgId) ?? 0;
}

<section class="row justify-content-center">
	<div class="card border-2 p-0 col-8 col-xl-4">
		<h4 class="card-header p-2 text-center">Edit Unit @Model.Number</h4>
		<div class="card-body p-4 p-0">
			<form asp-action="Edit" method=post>
				<partial name="_EditUnitPartial" model=@Model />
				<div class="row justify-content-center">
					<button class="btn btn-success col-auto m-2"
							type="submit">
						<i class="fa-solid fa-save me-2"></i>Save
					</button>
					<button class="btn btn-warning col-auto m-2"
							type="button"
							onclick="location.href='@Url.Action("All","Units", new { houseOrgId })';">
						<i class="fa-solid fa-cancel me-2"></i>Cancel
					</button>
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}