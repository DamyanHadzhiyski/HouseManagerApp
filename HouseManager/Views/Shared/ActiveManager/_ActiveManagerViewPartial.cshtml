@model ActiveManagementViewModel

<div class="card border-dark text-center mb-5 mx-3 p-0" style="width: 18rem;">
	<div class="card-header fw-bold">@Model.ManagerPosition</div>
	@* <img class="img-fluid rounded-circle mx-auto m-2"
		 src="~/img/testimonial-1.jpg" style="width: 100px; height: 100px;" /> *@
	<div class="card-body text-dark">
		<h5 class="card-title">@Model.Name</h5>
		<div>
			<div class="mb-2"><i class="fa fa-phone me-3"></i>@Model.PhoneNumber</div>
			<p class="text-start mb-0">Mandate progress</p>
			<div class="progress">
				<div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @ViewBag.Progress" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
			</div>
			<div class="row row-cols-2 align-content-around mb-3">
				<div class="text-start">@Model.StartDate</div>
				<div class="text-end">@Model.EndDate</div>
			</div>
		</div>
		<button class="btn btn-warning" asp-controller="@Model.ManagerPosition" asp-action="Edit" asp-route-id="@ViewBag.ActivePresident.Id">Edit</button>
		<button class="btn btn-danger" asp-controller="@Model.ManagerPosition" asp-action="EndTerm" asp-route-id="@ViewBag.ActivePresident.Id" asp-route-houseOrgId="@ViewBag.HouseOrgId">End term</button>
	</div>
</div>
