@model HouseOrganizationFormModel

<section class="card border-dark mb-5 mx-3 col-lg-4">
	<h4 class="card-header p-3 text-center">Add new Unit</h4>
	<div class="card-body p-0">
		<form class="bg-light rounded p-4" asp-action="Add" method=post>
			<div class="form-group row mb-3">
				<label asp-for="@Model.Name" class="col-lg-3 control-label text-end pt-2"></label>
				<div class="col-lg-9">
					<input asp-for="@Model.Name" class="form-control">
				</div>
				<span asp-validation-for="@Model.Name" class="text-danger"></span>
			</div>
			<div class="form-group row mb-3">
				<label asp-for="@Model.Address" class="col-lg-3 control-label text-end pt-2"></label>
				<div class="col-lg-9">
					<input asp-for="@Model.Address" class="form-control p-2" value="">
				</div>
				<span asp-validation-for="@Model.Address" class="text-danger"></span>
			</div>
			<div class="form-group row mb-3">
				<label asp-for="@Model.Town" class="col-lg-3 control-label text-end pt-2"></label>
				<div class="col-lg-9">
					<input asp-for="@Model.Town" class="form-control" value="">
				</div>
				<span asp-validation-for="@Model.Town" class="text-danger"></span>
			</div>
			<button class="btn btn-success rounded-pill m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
		</form>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}