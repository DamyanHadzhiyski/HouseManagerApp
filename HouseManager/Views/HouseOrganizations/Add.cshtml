@model HouseOrganizationFormModel

<section class="row justify-content-center">
	<div class="card border-2 p-0 col-8 col-xl-4">
		<h4 class="card-header p-2 text-center">Add House Organization</h4>
		<div class="card-body p-4 p-0">
			<form asp-action="Add" method=post>
				<div class="form-group row mb-3">
					<label asp-for="@Model.Name" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.Name" class="form-control">
						<span asp-validation-for="@Model.Name" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.Address" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.Address" class="form-control p-2">
						<span asp-validation-for="@Model.Address" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.Town" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.Town" class="form-control">
						<span asp-validation-for="@Model.Town" class="text-danger"></span>
					</div>
				</div>
				<div hidden>
					<input asp-for="@Model.CreatorId" class="form-control">
				</div>
				<div class="row justify-content-center">
					<button class="btn btn-success col-auto m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
					<button class="btn btn-warning col-auto m-2" type="button" onclick="location.href='@Url.Action("All","HouseOrganizations")';"><i class="fa-solid fa-cancel me-2"></i>Cancel</button>
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}