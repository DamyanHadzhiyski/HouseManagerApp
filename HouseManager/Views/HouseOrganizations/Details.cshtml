@model HouseOrganizationDetailModel

@{
	ViewBag.Name = Model.Name;
}

<div class="bg-light rounded h-100 p-4">
	<h4 class="mb-4">@ViewBag.Name</h4>
	<div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Address: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.Address">
		</div>
	</div>
	<div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Town: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.TownName">
		</div>
	</div>
	<div class="form-group row align-items-top">
		<label class="col-sm-2 col-form-label fw-bold text-end">Board Members: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.PresidentName - President">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.CashierName - Cashier">
		</div>
	</div>
	<div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Occupants: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.OccupantsCount">
		</div>
	</div>
	<div class="form-group row align-items-center">
		<label class="col-sm-2 col-form-label fw-bold text-end">Units: </label>
		<div class="col-auto">
			<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.UnitsCount">
		</div>
	</div>
</div>