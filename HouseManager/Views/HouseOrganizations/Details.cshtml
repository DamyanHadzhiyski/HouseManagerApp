@model HouseOrganizationDetailViewModel

@{
	ViewBag.Name = Model.Name;
}

<div class="bg-light rounded h-100 p-4">
	<h4 class="mb-4 text-center">@ViewBag.Name</h4>
	<hr />
	<div class="form-group row align-items-center mb-2 mb-sm-0">
		<label class="col-sm-2 fw-bold text-sm-end">Address: </label>
		<label class="col-auto col-form-label">@Model.Address</label>
	</div>
	<div class="form-group row align-items-center mb-2 mb-sm-0">
		<label class="col-sm-2 fw-bold text-sm-end">Town: </label>
		<label class="col-auto col-form-label">@Model.Town</label>
	</div>
	<div class="form-group row align-items-top mb-2 mb-sm-0">
		<label class="col-sm-2 fw-bold text-sm-end">Managers: </label>
		<div class="col-auto d-flex flex-column">
			<label class="col-auto col-form-label p-0"><b>President -</b> @Model.PresidentName</label>
			<label class="col-auto col-form-label pt-0"><b>Cashier - </b> @Model.CashierName</label>
		</div>
	</div>
	<div class="form-group row align-items-center mb-2 mb-sm-0">
		<label class="col-sm-2 fw-bold text-sm-end">Units: </label>
		<label class="col-auto col-form-label">@Model.UnitsCount</label>
	</div>
	<div class="form-group row align-items-center mb-2 mb-sm-0">
		<label class="col-sm-2 fw-bold text-sm-end">Occupants: </label>
		<label class="col-auto col-form-label">@Model.OccupantsCount</label>
	</div>
	<div class="bg-light rounded d-flex justify-content-center p-4">
		<button type="button" class="btn btn-primary d-fluid m-1">Managers</button>
		<button type="button" class="btn btn-info d-fluid m-1">Units</button>
		<button type="button" class="btn btn-warning d-fluid m-1">Back</button>
	</div>
</div>