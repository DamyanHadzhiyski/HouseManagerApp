@model HouseOrganizationDetailViewModel

@{
	ViewBag.Name = Model.Name;
}
<h4 class="mb-4 text-center">@ViewBag.Name</h4>
<hr />
<section class="row justify-content-center">
	<div class="card border-dark p-0 col-8 col-xl-4">
		<h4 class="card-header p-3 text-center">@Model.Name Details</h4>
		<div class="card-body bg-light rounded p-4 p-0">
			<div class="row align-items-center mb-3">
				<label asp-for="@Model.Address" class="col-lg-3 text-start text-lg-end fw-bold"></label>
				<label class="col-lg-9">@Model.Address</label>
			</div>
			<div class="row align-items-center mb-3">
				<label asp-for="@Model.Town" class="col-lg-3 text-start text-lg-end fw-bold"></label>
				<label class="col-lg-9">@Model.Town</label>
			</div>
			<div class="row align-items-top mb-3">
				<label class="col-lg-3 text-start text-lg-end fw-bold">Management</label>
				<div class="col-lg-9 d-flex flex-column">
					<label class="p-0"><b>President - </b>@Model.PresidentName</label>
					<label class="pt-0"><b>Cashier - </b>@Model.CashierName</label>
				</div>
			</div>
			<div class="row align-items-center mb-3">
				<label asp-for="@Model.UnitsCount" class="col-lg-3 text-start text-lg-end fw-bold"></label>
				<label class="col-lg-9">@Model.UnitsCount</label>
			</div>
			<div class="row align-items-center mb-3">
				<label asp-for="@Model.OccupantsCount" class="col-lg-3 text-start text-lg-end fw-bold"></label>
				<label class="col-lg-9">@Model.OccupantsCount</label>
			</div>
			<form class="bg-light rounded d-flex justify-content-center p-4">
				<button asp-controller="HouseOrganizations" asp-action="Manage" asp-route-id="@Model.Id" class="btn btn-success d-fluid m-1"><i class="fa-solid fa-check me-2"></i>Manage</button>
				<button asp-controller="HouseOrganizations" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning d-fluid m-1"><i class="fa-solid fa-pencil me-2"></i>Edit</button>
				<button type="button" class="btn btn-info d-fluid m-1" onclick="location.href='@Url.Action("All","HouseOrganizations")';"><i class="fa-regular fa-circle-left me-2"></i>Back</button>
			</form>

		</div>
	</div>
</section>