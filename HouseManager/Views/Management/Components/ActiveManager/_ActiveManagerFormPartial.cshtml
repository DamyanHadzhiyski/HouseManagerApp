@inject IMemoryCache cache;

@model ActiveManagementFormModel

@{
	ViewBag.HouseOrgId = cache.Get(ManagedHouseOrgCacheId);

	ViewBag.DateNow = @DateOnly.FromDateTime(DateTime.Now).ToString(DateFormat);

	ViewBag.TermPeriod = Html.GetEnumSelectList(typeof(TermPeriod));
}


<div class="card border-dark text-center mb-5 mx-3 p-0" style="width: 18rem;">
	<form method=post>
		<div class="card-header text-white bg-danger fw-bold">Add @Model.ManagerPosition</div>
		<div class="form-floating mb-3 mt-2 mx-3">
			<input asp-for="@Model.Name" class="form-control" placeholder="Name">
			<label asp-for="@Model.Name" class="form-label"></label>
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div class="input date form-floating mb-3 mx-3" id="startDate" data-provide="datepicker" data-date-format="dd-MM-yyyy"
			 data-date-autoclose="true" data-date-today-Btn="true" data-date-container="#startDate" data-date-orientation="auto">
			<div class="input-group-addon form-floating">
				<div class="form-floating">
					<input asp-for="@Model.StartDate" type="text" class="form-control" placeholder="Start Date (dd-MM-yyyy)" value="@ViewBag.DateNow">
					<label asp-for="@Model.StartDate" class="form-label">Start Date (dd-MM-yyyy)</label>
					<span asp-validation-for="@Model.StartDate" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="form-floating mb-3 mx-3">
			<label asp-for="@Model.TermPeriod" class="form-label"></label>
			<select asp-for="@Model.TermPeriod" class="form-control" asp-items="@ViewBag.TermPeriods">
			</select>
			<span asp-validation-for="@Model.TermPeriod" class="text-danger"></span>
		</div>
		<div class="form-floating mb-3 mx-3">
			<input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone Number">
			<label asp-for="@Model.PhoneNumber" class="form-label"></label>
			<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
		</div>
		<button class="btn btn-success mb-3" type="submit" asp-controller="@Model.ManagerPosition" asp-action="Add" asp-route-houseOrgId="@ViewBag.HouseOrgId">Add</button>
	</form>
</div>