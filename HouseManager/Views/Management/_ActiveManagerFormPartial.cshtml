@inject IHttpContextAccessor HttpContextAccessor

@model ActiveManagementFormModel

@{
	var houseOrgId = HttpContextAccessor?.HttpContext?.Session.GetInt32(ManagedHouseOrgId) ?? 0;
	var termPeriods = Html.GetEnumSelectList(typeof(TermPeriod));
}

<section class="row justify-content-center mb-4">
	<div class="card border-dark p-0 col-8 col-xl-8">
		<h4 class="card-header text-white text-center bg-danger fw-bold p-2">Add @Model.Position</h4>
		<div class="card-body bg-light rounded p-4 p-0">
			<form method="post">
				<div hidden>
					<input asp-for="@Model.Id" />
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.Name" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.Name" class="form-control">
						<span asp-validation-for="@Model.Name" class="text-danger"></span>
					</div>
				</div>
				<div class="input date form-floating mb-3" id="startDate" data-provide="datepicker" data-date-format="dd-MM-yyyy"
					 data-date-autoclose="true" data-date-today-Btn="true" data-date-container="#startDate" data-date-orientation="auto">
					<div class="input-group-addon form-floating">
						<div class="form-group row mb-3">
							<label asp-for="@Model.StartDate" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
							<div class="col-lg-9">
								<input asp-for="@Model.StartDate" type="text" class="form-control" asp-format="@Model.StartDate.ToString(DateFormat)">
								<span asp-validation-for="@Model.StartDate" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.TermPeriod" class="col-lg-3 control-label text-start text-lg-end pt-2">Term Period</label>
					<div class="col-lg-9">
						<select asp-for="@Model.TermPeriod" class="form-select" asp-items="@termPeriods">
							<option selected></option>
						</select>
						<span asp-validation-for="@Model.TermPeriod" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.PhoneNumber" class="form-control p-2">
						<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3" hidden>
					<div class="col-lg-9">
						<input asp-for="@Model.Position" class="form-control p-2">
					</div>
				</div>
				<div class="row justify-content-center">
					@if (Model.Name == "")
					{
						<button asp-controller="Management" asp-action="Add" asp-route-houseOrgId="@houseOrgId" formmethod="post" class="btn btn-success col-auto rounded-pill m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
					}
					else
					{
						<button asp-controller="Management" asp-action="Edit" formmethod="post" class="btn btn-success col-auto rounded-pill m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
					}
				</div>
			</form>
		</div>
	</div>
</section>
