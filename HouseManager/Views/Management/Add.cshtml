@inject IHttpContextAccessor HttpContextAccessor

@model ActiveManagementFormModel

@{
	var houseOrgId = HttpContextAccessor?.HttpContext?.Session.GetInt32(ManagedHouseOrgId) ?? 0;
	var termPeriods = Html.GetEnumSelectList(typeof(TermPeriod));
}

<section class="row justify-content-center">
	<div class="card border-2 p-0 col-8 col-xl-4">
		<h4 class="card-header text-center fw-bold p-2">Add @Model.Position</h4>
		<div class="card-body rounded p-4 p-0">
			<form asp-action="Add" method="post">
				<div class="form-group row mb-3">
					<label asp-for="@Model.Name" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.Name" class="form-control">
						<span asp-validation-for="@Model.Name" class="text-danger"></span>
					</div>
				</div>
				<div class="input date form-floating mb-3" id="startDate" data-provide="datepicker" data-date-format="dd-MM-yyyy"
					 data-date-autoclose="true" data-date-today-Btn="true" data-date-container="#startDate" data-date-orientation="auto"
					 data-date-startDate="1,century">
					<div class="input-group-addon form-floating">
						<div class="form-group row mb-3">
							<label asp-for="@Model.StartDate" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
							<div class="col-lg-9">
								<input asp-for="@Model.StartDate" type="text" class="form-control" asp-format="@Model.StartDate.ToString(DateFormat)">
								<span asp-validation-for="@Model.StartDate" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.TermPeriod" class="col-lg-3 control-label text-start text-lg-end pt-2">Term Period</label>
					<div class="col-lg-9">
						<select asp-for="@Model.TermPeriod" class="form-select" asp-items="@termPeriods">
							<option selected></option>
						</select>
						<span asp-validation-for="@Model.TermPeriod" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.PhoneNumber" class="form-control p-2">
						<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
					</div>
				</div>
				<div hidden>
					<input asp-for="@Model.Id" class="form-control" />
				</div>
				<div hidden>
					<input asp-for="@Model.Position" class="form-control" />
				</div>
				<div hidden>
					<input asp-for="@Model.HouseOrganizationId" class="form-control" value="@houseOrgId" />
				</div>
				<div class="row justify-content-center">
					<button class="btn btn-success col-auto rounded m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
					<button type="button" class="btn btn-warning col-auto rounded m-2" onclick="location.href='@Url.Action("All","Management", new {houseOrgId = houseOrgId})';"><i class="fa-solid fa-cancel me-2"></i>Cancel</button>
				</div>
			</form>
		</div>
	</div>
</section>
