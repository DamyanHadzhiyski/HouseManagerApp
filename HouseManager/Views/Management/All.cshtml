<div class="row row-cols-1 row-cols-md-2 justify-content-center">
	<div class="row justify-content-center">
		<partial name="_InactiveManagerViewPartial" model="@ViewBag.InactivePresidents" />
	</div>
	<div class="row justify-content-center">
