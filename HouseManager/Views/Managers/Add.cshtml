@inject IHttpContextAccessor HttpContextAccessor

@model ActiveManagerFormModel

@{
	var houseOrgId = HttpContextAccessor?.HttpContext?.Session.GetInt32(HouseOrgId) ?? 0;
}

<section class="row justify-content-center">
	<div class="card border-2 p-0 col-8 col-xl-4">
		<h4 class="card-header text-center fw-bold p-2">Add @Model.Position</h4>
		<div class="card-body p-4 p-0">
			<form asp-action="Add" method="post">
				<partial name="_AddManagerPartial" model="@Model" />
				<div class="row justify-content-center">
					<button class="btn btn-success col-auto m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
					<button type="button" class="btn btn-warning col-auto m-2" onclick="location.href='@Url.Action("All","Managers", new {houseOrgId})';"><i class="fa-solid fa-cancel me-2"></i>Cancel</button>
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}