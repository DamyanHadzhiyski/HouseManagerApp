@model ManagerViewModel

<form class="col-8 offset-2 bg-light rounded h-100 p-4" asp-action="Add" method=post>
	<div>
		<h4 class="mb-5">Add Board member</h4>
		<div class="form-floating mb-3">
			<input asp-for="@Model.Name" class="form-control" placeholder="Name">
			<label asp-for="@Model.Name" class="form-label"></label>
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div class="form-floating mb-3">
			<input asp-for="@Model.StartDate" type="date" class="form-control" placeholder="">
			<label asp-for="@Model.StartDate" class="form-label"></label>
			<span asp-validation-for="@Model.StartDate" class="text-danger"></span>
		</div>
		<div class="form-floating mb-3">
			<input asp-for="@Model.EndDate" type="date" class="form-control" placeholder="End Date">
			<label asp-for="@Model.EndDate" class="form-label"></label>
			<span asp-validation-for="@Model.EndDate" class="text-danger"></span>
		</div>
		<div class="form-floating mb-3">
			<input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone Number">
			<label asp-for="@Model.PhoneNumber" class="form-label"></label>
			<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
		</div>
	</div>
	<button class="btn btn-success rounded-pill m-2" type="submit">Add</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}