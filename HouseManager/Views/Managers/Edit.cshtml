@inject IHttpContextAccessor HttpContextAccessor

@model ActiveManagerFormModel

@{
	var houseOrgId = HttpContextAccessor?.HttpContext?.Session.GetInt32(ManagedHouseOrgId) ?? 0;
	var termPeriods = Html.GetEnumSelectList(typeof(TermPeriod));

	var accessCode = TempData["AccessCode"];
}

<section class="row justify-content-center">
	<div class="card border-2 p-0 col-8 col-xl-4">
		<h4 class="card-header p-2 text-center">Edit @Model.Name</h4>
		<div class="card-body p-4 p-0">
			<form asp-action="Edit" asp-route-id="@Model.Id" method=post>
				<div class="form-group row mb-3">
					<label asp-for="@Model.Name" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.Name" class="form-control">
						<span asp-validation-for="@Model.Name" class="text-danger"></span>
					</div>
				</div>
				<div class="input date form-floating mb-3" id="startDate" data-provide="datepicker" data-date-format="dd-MM-yyyy"
					 data-date-autoclose="true" data-date-today-Btn="true" data-date-container="#startDate" data-date-orientation="auto"
					 data-date-startDate="1,century">
					<div class="input-group-addon form-floating">
						<div class="form-group row mb-3">
							<label asp-for="@Model.StartDate" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
							<div class="col-lg-9">
								<input asp-for="@Model.StartDate" type="text" class="form-control" asp-format="@Model.StartDate.ToString("dd-MMMM-yyyy")">
								<span asp-validation-for="@Model.StartDate" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.TermPeriod" class="col-lg-3 control-label text-start text-lg-end pt-2">Term Period</label>
					<div class="col-lg-9">
						<select asp-for="@Model.TermPeriod" class="form-select" asp-items="@termPeriods">
							<option selected></option>
						</select>
						<span asp-validation-for="@Model.TermPeriod" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label text-start text-lg-end pt-2"></label>
					<div class="col-lg-9">
						<input asp-for="@Model.PhoneNumber" class="form-control">
						<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
					</div>
				</div>
				<div hidden>
					<input asp-for="@Model.Id" />
				</div>
				<div hidden>
					<input asp-for="@Model.Position">
				</div>
				<div class="row justify-content-center">
					<button class="btn btn-success col-auto m-2" type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
					<button class="btn btn-warning col-auto m-2" type="button" onclick="location.href='@Url.Action("All","Managers", new {houseOrgId})';"><i class="fa-solid fa-cancel me-2"></i>Cancel</button>
					<button class="btn btn-danger col-auto m-2" asp-controller="Managers" asp-action="EndTerm" asp-route-id="@Model.Id" asp-route-houseOrgId="@houseOrgId"><i class="fa-regular fa-circle-xmark me-2"></i>End term</button>
					<div class="row justify-content-center">
						<button asp-controller="Access" asp-action="GenerateManagerCode" asp-route-managerId="@Model.Id" class="btn btn-secondary col-auto m-1">Generate Access Code</button>
					</div>
				</div>
			</form>
			@if (accessCode != null)
			{
				<script>
					document.addEventListener('DOMContentLoaded', (event) => {
						var myModal = new bootstrap.Modal(document.getElementById("exampleModal"));
						myModal.show();
					});
				</script>
			}
			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content">
						<div class="modal-header">
							<h1 class="modal-title fs-5" id="exampleModalLabel">Manager Access Code</h1>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<p class="text-center">Access code for @Model.Position.ToString().ToLower() @Model.Name</p>
							<h4 class="text-center">@accessCode</h4>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}