<div class="card border-2 p-0 col-12 col-xl-3 mb-3">
	<h4 class="card-header p-2 text-center">Add</h4>
	<form class="card-body row justify-content-between align-items-center mx-0">
		<button asp-area="" asp-controller="Managers" asp-action="Add" asp-route-position="@ManagerPosition.President"
				class="btn btn-success align-self-center col-5 m-2"
				type="submit">
			<i class="fa-solid fa-user-tie fa-3x mt-2 mb-3"></i>
			<p class="fw-bold">President</p>
		</button>
		<button asp-area="" asp-controller="Managers" asp-action="Add" asp-route-position="@ManagerPosition.Cashier"
				class="btn btn-success align-self-center col-5 m-2"
				type="submit">
			<i class="fa-solid fa-cash-register fa-3x mt-2 mb-3"></i>
			<p class="fw-bold">Cashier</p>
		</button>
	</form>
</div>