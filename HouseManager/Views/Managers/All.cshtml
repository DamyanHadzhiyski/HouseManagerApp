@model List<ManagerViewModel>


@if (!Model.Any())
{
	<form>
		<div class="bg-light rounded h-100 p-5">
			<h2 class="text-center">There are no board members assigned to this house organization!</h2>
			<h3 class="text-center text-danger"><b>Having a board members is mandatory!</b></h3>
			<h3 class="text-center text-danger"><b>Please, assign President and Cashier!</b></h3>
			<button class="btn btn-lg btn-success col-4 offset-4 mt-4" asp-controller="Managers" asp-action="Add">Add Manager</button>
		</div>
	</form>
}
else
{
	<form class="col-12">
		<div class="bg-light rounded h-100 p-4">
			<h4 class="mb-4">Managers</h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Position</th>
							<th scope="col">Start Date</th>
							<th scope="col">End Date</th>
							<th scope="col">Phone Number</th>
							<th class="text-center" scope="col">End Term</th>
							<th class="text-center" scope="col">Edit</th>
						</tr>
					</thead>
					<tbody class="align-middle">
						@for (int i = 0; i < Model.Count(); i++)
						{
							<tr>
								<th scope="row">@(i + 1)</th>
									<td>@Model[i].Name</td>
									<td>@Model[i].StartDate</td>
									<td>@Model[i].EndDate</td>
									<td>@Model[i].PhoneNumber</td>
								<td class="text-center">
									<button type="submit" class="btn btn-info btn-danger" asp-controller="Managers" asp-action="All" asp-route-id="">End term</button>
								</td>
								<td class="text-center">
									<button class="btn btn-warning" asp-controller="Managers" asp-action="Edit" asp-route-id="@Model[i].Id">Edit</button>
								</td>
							</tr>
						}
					</tbody>
				</table>
				<button class="btn btn-sml btn-success m-4" asp-controller="Managers" asp-action="Add">Add Manager</button>
			</div>
		</div>
	</form>
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}