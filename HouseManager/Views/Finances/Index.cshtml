@inject IHttpContextAccessor HttpContextAccessor

@{
	var houseOrgId = HttpContextAccessor?.HttpContext?.Session.GetInt32(ManagedHouseOrgId);
	var houseOrgName = HttpContextAccessor?.HttpContext?.Session.GetString(ManagedHouseOrgName);

}

<form class="col-12">
	<div class="bg-light rounded">
		<h4 class="text-center mb-4">@houseOrgName - Finances</h4>
		<hr />
		<div class="row row-cols-2 justify-content-around align-items-top mb-5">
			<div class="card row border-2 p-0 col-12 col-xl-4">
				<h4 class="card-header p-2 text-center">Create New</h4>
				<div class="card-body row justify-content-between align-items-center mx-0">
					<button asp-controller="Finances" asp-action="NewIncome" asp-route-houseOrgId="@houseOrgId"
							class="btn btn-success col-5 col-xl-5 rounded m-2"
							type="submit">
						<i class="fa fa-donate fa-3x mt-2 mb-3"></i>
						<p class="fw-bold">Income</p>
					</button>
					<button asp-controller="Finances" asp-action="NewExpense" asp-route-houseOrgId="@houseOrgId"
							class="btn btn-danger col-5 col-md-5 rounded m-2"
							type="submit">
						<i class="fa fa-hand-holding-usd fa-3x mt-2 mb-3"></i>
						<p class="fw-bold">Expense</p>
					</button>
				</div>
			</div>
			<div class="card row border-2 p-0 col-12 col-xl-4">
				<h4 class="card-header p-2 text-center">Current Balance</h4>
				<div class="card-body row align-items-center mx-0">
					<h1 class="display-4 text-center align-middle mb-3">Welcome BGN</h1>
				</div>
			</div>
		</div>
		<div class="row row-cols-2 justify-content-around">
			<div class="card row border-2 p-0 mb-3 mx-0 col-12 col-xl-6">
				<partial name="_IncomesViewPartial" />
			</div>
			<div class="card row border-2 p-0 mb-3 mx-0 col-12 col-xl-6">
				<partial name="_ExpensesViewPartial" />
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}