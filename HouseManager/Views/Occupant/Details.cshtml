@model OccupantDetailViewModel

<div class="bg-light rounded h-100 p-4">
	<h4 class="text-center mb-4">@ViewBag.Name</h4>
	<hr />
	<div class="row row-cols-1 row-cols-sm-2 align-middle">
		<div id="unit-details" class="col">
			<div class="form-group row align-items-center">
				<label class="col-sm-2 col-form-label fw-bold text-end">Name: </label>
				<div class="col-auto">
					<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.FullName">
				</div>
			</div>
			<div class="form-group row align-items-center">
				<label class="col-sm-2 col-form-label fw-bold text-end">Phone Number: </label>
				<div class="col-auto">
					<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.PhoneNumber">
				</div>
			</div>
			<div class="form-group row align-items-top">
				<label class="col-sm-2 col-form-label fw-bold text-end">Birth Date: </label>
				<div class="col-auto">
					<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.BirthDate">
				</div>
			</div>
			<div class="form-group row align-items-top">
				<label class="col-sm-2 col-form-label fw-bold text-end">Owner: </label>
				<div class="col-auto">
					<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.IsOwner">
				</div>
			</div>
			<div class="form-group row align-items-center">
				<label class="col-sm-2 col-form-label fw-bold text-end">Occupation Date: </label>
				<div class="col-auto">
					<input type="text" readonly disabled class="form-control-plaintext border-0" value="@Model.OccupationDate">
				</div>
			</div>
		</div>
	</div>
</div>